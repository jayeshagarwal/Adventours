<%-include('../partials/header', {title: 'Exciting tours for adventurous people'}) %>

<main class="main">
    <div class="card-container">
        <% docs.forEach((tour)=> { %>
            <div class="card">
                <div class="card-header card__header">
                    <div class="card__picture">
                        <div class="card__picture-overlay">&nbsp;</div>
                        <img class=" card-img-top card__picture-img" src="/img/tours/<%=tour.imageCover%>" alt="<%= tour.name%>">
                    </div>
                    <h3 class="heading-tertirary">
                        <span><%= tour.name%></span>
                    </h3>
                </div>
                <div class="card-body card__details">
                    <h4 class="card-title card__sub-heading"><%= tour.difficulty%> &nbsp <%= tour.duration%>-days tour </h4>
                    <p class="card-text card__text"><%= tour.summary%></p>
                    <div>
                        <div class="row" style="margin-bottom: 1.5rem;">
                            <div class="col card__data">
                                <svg class="card__icon">
                                    <use xlink:href="/img/icons.svg#icon-map-pin"></use>
                                </svg>
                                <span><%= tour.startLocation.description%></span>
                            </div>
                            <div class="col card__data">
                                <svg class="card__icon">
                                    <use xlink:href="/img/icons.svg#icon-calendar"></use>
                                </svg>
                                <span><%= tour.startDates[0].toLocaleString('default', { month: 'long' })%> <%= tour.startDates[0].getFullYear()%></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col card__data">
                                <svg class="card__icon">
                                    <use xlink:href="/img/icons.svg#icon-flag"></use>
                                </svg>
                                <span><%= tour.locations.length%> stops</span>
                            </div>
                            <div class="col card__data">
                                <svg class="card__icon">
                                    <use xlink:href="/img/icons.svg#icon-user"></use>
                                </svg>
                                <span><%= tour.maxGroupSize%> people</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer card__footer">
                    <div style="width: 60%; float:left;">
                        <p>
                            <span class="card__footer-value">$<%= tour.price%></span> 
                            <span class="card__footer-text">per person</span>
                        </p>
                        <p>
                            <span class="card__footer-value"><%= tour.ratingsAverage%></span> 
                            <span class="card__footer-text">rating (<%= tour.ratingsQuantity%>)</span>
                        </p>
                    </div>
                    <div style="width: 40%; float: left;">
                        <a class="btn btn--green btn--small" href="/tours/<%= tour._id%>">Details</a>
                    </div>
                </div>
            </div>
       <% }) %>
    </div>
</main>


<%-include('../partials/footer') %>